{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": ["gomodTidy", "pnpmDedupe"],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "postUpgradeTasks": {
        "commands": ["go mod download", "go tool golangci-lint run ./... --fix"],
        "executionMode": "branch"
      }
    },
    {
      "matchManagers": ["npm"],
      "postUpgradeTasks": {
        "commands": ["pnpm format"],
        "executionMode": "branch"
      }
    }
  ],
  "extends": ["config:recommended"]
}
